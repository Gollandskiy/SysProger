<Window x:Class="Занятие_в_аудитории_1_Системное_программирование_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Занятие_в_аудитории_1_Системное_программирование_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Label Content="Системное программирование"
               HorizontalAlignment="Center"
               FontWeight="Bold"
               FontSize="18"/>
        <Button Content="Многопоточность" x:Name="ThreadingButton"
                Margin="20 7" Click="ThreadingButton_Click"/>

        <Button Content="Синхронизация" x:Name="SynchroButton"
                Margin="20 7" Click="SynchroButton_Click"/>

        <Button Content="Многозадачность" x:Name="TaskButton"
                Margin="20 7" Click="TaskButton_Click"/>

        <Button Content="Отмена задач" x:Name="CancelButton"
                Margin="20 7" Click="CancelButton_Click"/>

    </StackPanel>
</Window>
